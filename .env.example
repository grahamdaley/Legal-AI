# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_DB_URL=postgresql://postgres:postgres@127.0.0.1:34322/postgres

# Azure OpenAI (for text generation and batch processing)
# Region: eastasia (Hong Kong) or southeastasia (Singapore)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2024-10-01-preview
AZURE_OPENAI_EMBED_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_GPT4O_DEPLOYMENT=gpt-4o

# Azure Storage (for batch processing)
AZURE_STORAGE_ACCOUNT_NAME=legalaistorage
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
AZURE_BATCH_INPUT_CONTAINER=batch-input
AZURE_BATCH_OUTPUT_CONTAINER=batch-output

# Azure Service Principal (alternative authentication for batch)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# AWS / Bedrock (for embeddings)
# Region: ap-southeast-1 (Singapore) - Closest to Hong Kong
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Bedrock Batch Processing (S3 buckets and IAM role)
BEDROCK_BATCH_INPUT_BUCKET=legal-ai-bedrock-batch-input-dev
BEDROCK_BATCH_OUTPUT_BUCKET=legal-ai-bedrock-batch-output-dev
BEDROCK_BATCH_ROLE_ARN=arn:aws:iam::123456789012:role/legal-ai-bedrock-batch-role-dev

# Output directory
OUTPUT_DIR=./output

# Scraper settings
SCRAPER_REQUEST_DELAY=3.0
SCRAPER_MAX_CONCURRENT=2
SCRAPER_HEADLESS=true

# State and logging
STATE_DIR=./state
LOG_DIR=./logs
LOG_LEVEL=INFO

# AI Models - Phase 1 Configuration (No Bedrock approval needed)
# EMBEDDING_MODEL: amazon.titan-embed-text-v2:0 (Bedrock, no approval required)
# HEADNOTE_MODEL: Use Azure GPT-4o while waiting for Claude approval
EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
HEADNOTE_MODEL=azure-gpt-4o

# Future Phase 2 (after Claude approval):
# HEADNOTE_MODEL=anthropic.claude-opus-4-5:0

# Apify (optional)
# APIFY_TOKEN=your-apify-token
